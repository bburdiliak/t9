{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "es6", "es2015", "esnext.asynciterable"],
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "client/node_modules/*"
      ]
    }
  },
  "include": [
    "client/**/*"
  ]
}